{
    "manifest_version": 3,
    "name": "JobMarked",
    "version": "1.0",
    "description": "See which jobs you've already applied for",
    "permissions": ["storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "32": "icons/icon32.png",
        "128": "icons/icon128.png"
      }
    }
  }
  